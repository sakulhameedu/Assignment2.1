import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.util.Scanner; 
public class pattern {

	public static void main(String[] args)
{

Scanner scan = new Scanner(System.in);
  System.out.print("\n enter the SIZE of pattern ");
int size = scan.nextInt();  //for getting size of the pattern 
for (int i = 1; i <= size; i++) //For row level printing 
{ 
for (int j = 1; j <= size; j++) //for Column level printing 
{ 
if (i==j || j==(size+1)-i)
  System.out.print("*"); //printing "x" pattern 
else 
  System.out.print("_"); //Leaving Space between "*"
} 
  System.out.print("\n");
}
}
}
